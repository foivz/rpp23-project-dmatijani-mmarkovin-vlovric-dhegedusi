<UserControl x:Class="PresentationLayer.MemberPanels.UcDetailsNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.MemberPanels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <DockPanel Background="#FFEFE8">
        <TextBlock Text="Detalji obavijesti" Style="{StaticResource titleText}" Background="#637E60" Foreground="#FFEFE8" DockPanel.Dock="Top"/>
        <Button x:Name="btnCancel" Width="150" Height="40" Margin="10" Style="{StaticResource bigButton}" Background="#637E60" HorizontalAlignment="Right" Content="Natrag" DockPanel.Dock="Bottom" Click="btnCancel_Click"/>
        <StackPanel Margin="20">
            <TextBlock x:Name="lblTitle" Text="Naslov" Style="{StaticResource titleText}" TextWrapping="Wrap" HorizontalAlignment="Stretch" Margin="0 0 0 20"/>
            <TextBlock x:Name="lblDescription" Text="opis"  HorizontalAlignment="Stretch" FontSize="16" Margin="0 0 0 20" TextWrapping="Wrap"/>
        </StackPanel>
    </DockPanel>
</UserControl>
