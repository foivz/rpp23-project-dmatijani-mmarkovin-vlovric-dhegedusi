<UserControl x:Class="PresentationLayer.MemberPanels.UcDetailsNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.MemberPanels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Background="#FFEFE8">
        <TextBlock Text="Detalji obavijesti" Style="{StaticResource titleText}" Background="#637E60" Foreground="#FFEFE8" DockPanel.Dock="Top"/>
        <StackPanel Margin="20">
            <TextBlock x:Name="lblTitle" Text="Naslov" Style="{StaticResource titleText}" HorizontalAlignment="Left" Margin="10 0 0 20"/>
            <Label x:Name="lblDescription" Content="opis"  HorizontalAlignment="Left" FontSize="16" Margin="10 0 0 20"/>
        </StackPanel>
    </DockPanel>
</UserControl>
