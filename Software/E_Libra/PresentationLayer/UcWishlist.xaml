<UserControl x:Class="PresentationLayer.UcWishlist"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <StackPanel Background="White">
        <Label Content="Želim pročitati" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#637E60" Foreground="#FFEFE8" FontSize="16"></Label>
        <DataGrid x:Name="dgvWishlist" Margin="10,10,10,10" Height="300"></DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnRemove" Margin="20,0,20,0" Width="90" Height="45"
    Background="#637E60" Foreground="#FFEFE8" Click="btnRemove_Click">
                <TextBlock>
                Makni knjigu
                <LineBreak/>
                sa popisa
                </TextBlock>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
